<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Feijoo_Progreso3.ViewModels"
             x:Class="Feijoo_Progreso3.Views.InventarioPage">

    <ContentPage.BindingContext>
        <vm:InventarioViewModel x:Name="VM" />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Prendas}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                    <Label Text="{Binding Color}" />
                    <Label Text="Talla: {Binding Talla}" />
                    <Label Text="En Inventario: {Binding EnInventario}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>